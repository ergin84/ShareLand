# SHAReLAND Production Environment Configuration
# Copy this file to shareland/.env and update with your values

# ======================
# Django Settings
# ======================

# SECURITY WARNING: Generate a strong secret key for production!
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-very-long-random-secret-key-change-this-in-production

# Set to False in production
DEBUG=False

# Add your domain names separated by commas (no spaces)
ALLOWED_HOSTS=shareland.it,www.shareland.it,localhost,127.0.0.1

# ======================
# Database Configuration
# ======================

DB_NAME=Open_Landscapes
DB_USER=postgres
DB_PASSWORD=your-secure-postgres-password
DB_HOST=postgres
DB_PORT=5432

# ======================
# Email Configuration
# ======================

# Email backend (for production, use SMTP)
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=465
EMAIL_HOST_USER=noreply@shareland.it
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=False
EMAIL_USE_SSL=True

# Default from email
DEFAULT_FROM_EMAIL=noreply@shareland.it

# Admin email for error notifications
ADMIN_EMAIL=admin@shareland.it

# ======================
# Optional Settings
# ======================

# Time zone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us

# ======================
# Notes
# ======================
# 
# 1. SECRET_KEY: Must be unique and secret. Never commit to version control!
# 2. DEBUG: Always set to False in production
# 3. ALLOWED_HOSTS: Must include all domains serving your application
# 4. Database passwords: Use strong passwords (20+ characters, mixed case, numbers, symbols)
# 5. Email: Configure with your actual SMTP server
# 6. This file should have restricted permissions: chmod 600 .env
#
